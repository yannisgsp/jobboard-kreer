{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["apps/back", "apps/front"],
    "types": ["node"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "strict": true,
    "declaration": false,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022", "DOM"]
  },
}
